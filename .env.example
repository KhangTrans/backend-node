# Database URL
DATABASE_URL="mysql://username:password@host:port/database?sslmode=no-verify"

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Cloudinary Configuration (Get from https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# URLs (Update these with your actual domains)
FRONTEND_URL=https://yourdomain.com
API_URL=https://your-api-domain.vercel.app

# Server Port
PORT=5000
